{
  "name": "portfelik",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:emulators": "firebase emulators:start --import=./firebase-data --export-on-exit=./firebase-data",
    "dev:all": "concurrently \"npm run dev\" \"npm run dev:emulators\"",
    "build": "tsc -b && vite build",
    "deploy": "firebase deploy",
    "deploy:force": "firebase deploy --force",
    "deploy:rules": "firebase deploy --only firestore:rules",
    "deploy:emulator": "firebase deploy --only firestore:rules -c emulator",
    "config:emulator": "firebase use emulator",
    "config:prod": "firebase use production",
    "lint": "eslint .",
    "preview": "vite preview",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "seed:categories": "vite-node src/scripts/seed-categories.ts",
    "seed:emulator": "vite-node src/scripts/seed-emulator.ts"
  },
  "dependencies": {
    "@radix-ui/react-alert-dialog": "^1.1.6",
    "@radix-ui/react-dialog": "^1.1.6",
    "@radix-ui/react-label": "^2.1.2",
    "@radix-ui/react-select": "^2.1.6",
    "@radix-ui/react-slot": "^1.1.2",
    "@tailwindcss/vite": "^4.0.14",
    "@tanstack/react-form": "^1.0.5",
    "@tanstack/react-query": "^5.68.0",
    "@tanstack/react-query-devtools": "^5.68.0",
    "@tanstack/react-router": "^1.114.22",
    "@tanstack/react-store": "^0.7.0",
    "@tanstack/react-table": "^8.21.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.13",
    "firebase": "^11.4.0",
    "lucide-react": "^0.482.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.0.2",
    "tailwindcss": "^4.0.14",
    "tailwindcss-animate": "^1.0.7",
    "vite-plugin-pwa": "^0.21.1",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.21.0",
    "@tanstack/react-router-devtools": "^1.114.22",
    "@tanstack/router-plugin": "^1.114.22",
    "@types/node": "^22.13.10",
    "@types/react": "^19.0.10",
    "@types/react-dom": "^19.0.4",
    "@vitejs/plugin-react": "^4.3.4",
    "@vitest/ui": "^3.0.8",
    "concurrently": "^9.1.2",
    "eslint": "^9.21.0",
    "eslint-plugin-react-hooks": "^5.1.0",
    "eslint-plugin-react-refresh": "^0.4.19",
    "globals": "^15.15.0",
    "jsdom": "^26.0.0",
    "typescript": "~5.7.2",
    "typescript-eslint": "^8.24.1",
    "vite": "^6.2.0",
    "vite-node": "^1.6.1",
    "vitest": "^3.0.8"
  }
}
